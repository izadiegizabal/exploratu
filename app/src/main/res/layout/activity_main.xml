<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

    <!-- Other components and views -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:id="@+id/currency_header"
                style="@style/ModeHeader"
                android:text="@string/headline_currencies"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <GridLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="?attr/actionBarSize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/pad_7"
                    style="@style/PadButton"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:text="7"
                    app:rippleColor="@color/color_secondary" />

            <Button
                    android:id="@+id/pad_8"
                    style="@style/PadButton"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:text="8"
                    app:rippleColor="@color/color_secondary" />

            <Button
                    android:id="@+id/pad_9"
                    style="@style/PadButton"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:text="9"
                    app:rippleColor="@color/color_secondary" />

            <Button
                    android:id="@+id/pad_4"
                    style="@style/PadButton"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:text="4"
                    app:rippleColor="@color/color_secondary" />

            <Button
                    android:id="@+id/pad_5"
                    style="@style/PadButton"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:text="5"
                    app:rippleColor="@color/color_secondary" />

            <Button
                    android:id="@+id/pad_6"
                    style="@style/PadButton"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:text="6"
                    app:rippleColor="@color/color_secondary" />

            <Button
                    android:id="@+id/pad_1"
                    style="@style/PadButton"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:text="1"
                    app:rippleColor="@color/color_secondary" />

            <Button
                    android:id="@+id/pad_2"
                    style="@style/PadButton"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:text="2"
                    app:rippleColor="@color/color_secondary" />

            <Button
                    android:id="@+id/pad_3"
                    style="@style/PadButton"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:text="3"
                    app:rippleColor="@color/color_secondary" />

            <Button
                    android:id="@+id/pad_comma"
                    style="@style/PadButton"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:text=","
                    app:rippleColor="@color/color_secondary" />

            <Button
                    android:id="@+id/pad_0"
                    style="@style/PadButton"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:text="0"
                    app:rippleColor="@color/color_secondary" />

            <Button
                    android:id="@+id/pad_00"
                    style="@style/PadButton"
                    android:layout_column="2"
                    android:background="#00E00D0D"
                    android:text="00"
                    app:rippleColor="@color/color_secondary" />

            <Button
                    android:id="@+id/pad_ac"
                    style="@style/PadButton"
                    android:layout_row="0"
                    android:layout_rowSpan="2"
                    android:layout_column="3"
                    android:text="AC"
                    app:rippleColor="@color/color_secondary" />

            <Button
                    android:id="@+id/pad_backspace"
                    style="@style/PadButton"
                    android:layout_row="2"
                    android:layout_rowSpan="2"
                    android:layout_column="3"
                    android:text="del"
                    app:rippleColor="@color/color_secondary" />
        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:backgroundTint="@color/color_primary"
            app:fabAlignmentMode="center"
            app:navigationIcon="@drawable/ic_menu_white_24dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_twotone_camera_enhance"
            app:layout_anchor="@id/bottomAppBar" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>